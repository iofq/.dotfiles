# Window manipulation
# ______________

# Close window
super + x
	bspc node -c

# Presel window for splitting in certain direction
alt + ctrl + {h,j,k,l}
	bspc node -p \~{west,south,north,east}
		
# go (Shift=move) to desktop (and focus the monitor that the desktop is located on. Bspwm style)
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} ^{1-9,10}
#last desktop
super + Tab
  bspc desktop -f last

#Focus windows by direction. use bspwm-scripts if you need multihead
super + {_,shift + }{h,j,k,l}
  bspc node -{f,s} {west,south,north,east}
super + {_,shift + }{Left, Down, Up, Right}
  bspc node -{f,s} {west,south,north,east}
        	
#resize windows
super + alt + {h,j,k,l}
  bspwm-resize.sh {west,south,north,east}

# Layout manipulation/desktop level controls

# Toggle tiling mode of window
super + shift + t
	bspc node -t {pseudo_tiled,tiled}
super + t
	{bspc node -t floating && window-placer $(bspc query -T -d | grep -o '"state":"floating"' | wc -l),bspc node -t tiled}

# Toggle monocle mode
super + f 
	bspc desktop -l next

# Promote window (dwm style)
super + p
  bspc node --swap biggest.local
	
# Balance tree
super + b
	bspc node @/ -B

# Undo balancing (equalize windows)
super + shift + b
	bspc node @/ -E

# Mirror and flip leaves of tree
super + {comma,period}
	bspc node @/ -F {horizontal,vertical}
# Rotate leaves of tree
super + shift + {comma,period}
	bspc node @/ -R {90,270}

# Change window gap
super + alt + Up
	bspc config -d focused window_gap $((`bspc config -d focused window_gap` + 2 ))
super + alt + Down
  bspc config -d focused window_gap 0

~button1

~button3
	
super + space
	dmenu_run

super + Return
  st
super + z
	st -e tmux

super + shift + p
	firefox --private-window
super + shift + f
	firefox
super + Escape
	xtrlock

super 


# make sxhkd reload its configuration files:
super + shift + Escape
	pkill -USR1 -x sxhkd

super + F6
	xbacklight -dec 15
super + F7
    xbacklight -inc 15
super + F8
	amixer -c 0 set PCM toggle
super + F9
	amixer -c 0 set PCM 10- unmute
super + F10
	amixer -c 0 set PCM 10+ unmute
