# Close window
super + x
	bspc node -c
  
#last desktop
super + Tab
  bspc desktop -f last

# go (Shift=move) to desktop (and focus the monitor that the desktop is located on. Bspwm style)
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} ^{1-9,10}

# Presel window for splitting in certain direction
alt + ctrl + {h,j,k,l}
	bspc node -p \~{west,south,north,east}
  
#Focus windows by direction. use bspwm-scripts if you need multihead
super + {_,shift + }{h,j,k,l}
  bspc node -{f,s} {west,south,north,east}
super + {_,shift + }{Left,Down,Up,Right}
  bspc node -{f,s} {west,south,north,east}
        	
#resize windows
super + alt + {h,j,k,l}
  bspwm-resize.sh {west,south,north,east}

# Toggle tiling mode of window
super + t
	bspc node -t {tiled,floating}
	
# Toggle monocle mode
super + f 
	bspc desktop -l next

# Promote window (dwm style)
super + p
  bspc node --swap biggest.local

#hide bar
super + g
	{polybar-msg cmd hide; bspc config top_padding +0 ,\
   polybar-msg cmd show; bspc config top_padding 26 }

# Balance tree
super + b
	bspc node @/ -B

# Undo balancing (equalize windows)
super + shift + b
	bspc node @/ -E

# Mirror and flip leaves of tree
super + {comma,period}
	bspc node @/ -F {horizontal,vertical}
# Rotate leaves of tree
super + shift + {comma,period}
	bspc node @/ -R {90,270}

# next, prev
super + n
  bspc node -f next.local
super + shift + n
  bspc node -f prev.local

# minimize and restore
super + m
  minimize.sh
super + shift + m
  restore.sh

# Change window gap
super + alt + Up
	bspc config -d focused window_gap $((`bspc config -d focused window_gap` + 2 ))
super + alt + Down
  bspc config -d focused window_gap 0

super + space
	dmenu_run
super + Return
  st
super + z
	st -e tmux

super + shift + f
	firefox

# make sxhkd reload its configuration files:
super + shift + Escape
	pkill -USR1 -x sxhkd

super + F6
	backlight -15
super + F7
  backlight 15
super + F8
	amixer -c 0 set PCM toggle
super + F9
	amixer -c 0 set PCM 10- unmute
super + F10
	amixer -c 0 set PCM 10+ unmute
