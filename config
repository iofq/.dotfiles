[module/date]
type = internal/date
interval = 1

date =
date-alt = " %y-%m-%d"

time = %H:%M
time-alt = %I:%M:%S

format-prefix = 
format-prefix-background = ${colors.DKAQ}
format-prefix-foreground = ${colors.BKGD}
format-underline = ${colors.DKAQ}

label = "%date% %time% "

[module/volume]
type = internal/volume
format-volume-underline = ${colors.BRGR}
format-volume = "<ramp-volume> <label-volume> " 
label-volume = %percentage%
label-volume-foreground = ${colors.FRGD}

format-muted-prefix = "  "
format-muted-prefix-background = ${colors.DKRD}
format-muted-prefix-foreground = ${colors.BKGD}
label-muted = " %percentage% "
format-muted-underline = ${colors.DKRD}

ramp-volume-0 = "  "
ramp-volume-1 = "  "
ramp-volume-background = ${colors.BRGR}
ramp-volume-foreground = ${colors.BKGD}

[module/battery]
type = internal/battery
;These should be the defaults, but may need to be changed
battery = BAT0
adapter = ADP1
full-at = 100 

format-charging = "<label-charging>  "
format-charging-underline = ${colors.BRGR}
label-charging = " +%percentage%%"

format-discharging = "<label-discharging>  "
format-discharging-underline = ${colors.BRGR}
label-discharging = " %percentage%%"

format-full-prefix = 
format-full-prefix-background = ${colors.DKGR}
format-full-prefix-foreground = ${colors.BKGD}
format-full-underline = ${colors.BRGR}
format-full = "<label-full>  "
format-full-foreground = ${colors.BRGR}
label-full = " %percentage%%"
label-alt=


ramp-capacity-0 = "  "
ramp-capacity-1 = "  "
ramp-capacity-2 = "  "
ramp-capacity-3 = "  "
ramp-capacity-4 = "  "
ramp-capacity-0-background = ${colors.DKRD}
ramp-capacity-0-foreground = ${colors.BKGD}
ramp-capacity-1-background = ${colors.BRYL}
ramp-capacity-1-foreground = ${colors.BKGD}
ramp-capacity-2-background = ${colors.BRYL}
ramp-capacity-2-foreground = ${colors.BKGD}
ramp-capacity-3-background = ${colors.BRYL}
ramp-capacity-3-foreground = ${colors.BKGD}
ramp-capacity-4-background = ${colors.BRGR}
ramp-capacity-4-foreground = ${colors.BKGD}

animation-charging-0 = "+"
animation-charging-1 = "."
animation-charging-2 = "+"
animation-charging-3 = "."
animation-charging-4 = "+"
animation-charging-background = ${colors.DKGR}
animation-charging-foreground = ${colors.BKGD}
animation-charging-framerate = 750

[module/temperature]
type = internal/temperature
thermal-zone = 7
warn-temperature = 60

format = <label>
format-underline = ${colors.BRBL}
format-warn =<label-warn>
format-warn-underline = ${self.format-underline}

label = " %temperature-c:6:6% "
label-warn = " %temperature-c:6:6% "
label-warn-foreground = ${colors.BRRD}

ramp-0 = ""
ramp-1 = ""
ramp-2 = ""
ramp-foreground = ${colors.FRGD}

[module/powermenu]
type = custom/menu

expand-right = false

format-spacing = 1

label-open = " # "
label-open-foreground = ${colors.FRGD}
label-open-underline = ${colors.FRGD}
label-close = " # "
label-close-foreground = ${colors.FRGD}
label-separator = |
label-separator-foreground = ${colors.FRGD}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2
menu-0-2 = power options
menu-0-2-exec = menu-open-3

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = sudo reboot

menu-2-0 = power off
menu-2-0-exec = sudo shutdown now
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

menu-3-0 = powersave
menu-3-0-exec = sudo cpupower frequency-set -g powersave
menu-3-1 = performance
menu-3-1-exec = sudo cpupower frequency-set -g performance

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 0
margin-bottom = 0

