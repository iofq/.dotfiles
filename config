;Various colour definitons taken from gruvbox
[colors]
;Dark blue
DKBL = ${xrdb:color0:#222}
;Dark red
DKRD = ${xrdb:color1:#222}
BRRD = ${xrdb:color2:#222}
;Bright Yellow
BRYL = ${xrdb:color3:#222}

;Dark Green
DKGR = ${xrdb:color4:#222}

;Bright Green
BRGR = ${xrdb:color5:#222}

;Bright Blue
BRBL = ${xrdb:color6:#222}

;Background (Black-ish)
BKGD =${xrdb:background:#222}

;Foreground (White-ish)
FRGD =${xrdb:foreground:#222}

;Bright Aqua
BRAQ =${xrdb:color9:#222}

;Dark Aqua
DKAQ =${xrdb:color10:#222}

;Dark Orange
DKOR =${xrdb:color11:#222}

;now im just making shit up
BROR =${xrdb:color7:#222}
DKGN =${xrdb:color4:#222}


[bar/brightness]
;Change this to match monitor, find via xrandr -q
monitor = eDP1
;These will have to be adjusted to set position and size of brightness popup
width = 568
height = 45
offset-x = 3263
offset-y = 55
radius = 0
fixed-center = true

background = ${colors.BKGD}
foreground = ${colors.FRGD}

line-size = 3
line-color = #f00

border-size = 0
border-color = #FFFFFFFF

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 0

;Make sure you have the fonts installed.
font-0 = UbuntuMono Nerd Font:size=18;1
font-1 = FontAwesome:pixelsize=22;1

modules-left = 
modules-center = xbacklight 
modules-right = 

tray-position = 
;tray-padding = 2
;tray-transparent = true
;tray-background = #0063ff

;wm-restack = bspwm
;wm-restack = i3

override-redirect = false

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

[bar/bar]
;Change this to match monitor, find via xrandr -q
monitor = eDP1
;These will have to be adjusted to set position and size of main bar
width = 1920
height = 27
offset-x = 0
offset-y = 0
radius = 0
fixed-center = true

background = ${colors.BKGD}
foreground = ${colors.FRGD}

line-size = 3
line-color = #f00

border-size = 0
border-color = #FFFFFFFF

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 0

font-0 = xos4 Terminus:pixelsize=16;1
font-1 = FontAwesome:pixelsize=16;1

modules-left = bspwm
modules-center = xwindow
modules-right = cpu memory temperature battery date powermenu

;tray-position = right
;tray-padding = 2
;tray-transparent = true
;tray-background = #0063ff

wm-restack = bspwm
;wm-restack = i3

override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

[module/xwindow]
type = internal/xwindow
label = %title:0:50:...%
label-foreground = ${colors.BRBL}

[module/bspwm]
type = internal/bspwm
format-prefix = " "
;format-prefix-underline = ${colors.BRAQ}
format-suffix = " "
;format-suffix-underline = ${colors.BRAQ}
;format-underline = ${colors.BRAQ}
label-focused = "[-] "
label-focused-foreground = ${colors.BRAQ}
label-focused-padding = 0

label-occupied = "- "
label-occupied-foreground = ${colors.DKRD}
label-occupied-padding = 0

label-urgent = "$ "
label-urgent-foreground = ${colors.BRRD}
label-urgent-padding = 0

label-empty = "_ "
label-empty-foreground = ${colors.DKRD}
label-empty-padding = 0

[module/xbacklight]
type = internal/xbacklight

format-prefix = " "
format = <bar>

bar-width = 10
bar-indicator = |
bar-indicator-foreground = #ff
bar-indicator-font = 2
bar-fill = ─
bar-fill-font = 2
bar-fill-foreground = #9f78e1
bar-empty = ─
bar-empty-font = 2
bar-empty-foreground = ${colors.FRGD}

[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " cpu:"
format-suffix = " "
format-underline = ${colors.DKRD}
label = %percentage:4:4%%

#[module/freq]
#type = custom/script
#exec = mhz
#interval = 9 
#format-underline = ${colors.DKGN}
[module/memory]
type = internal/memory
interval = 2
format-prefix = " ram:"
format-suffix = " "
format-underline = ${colors.DKOR}
label = %percentage_used:4:4%%

